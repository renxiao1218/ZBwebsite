@import "~common/stylus/mixin"
  .waiting
    wrapper()
    background-color white
    .contentWrapper
      position relative
      width 100%
      height 100%
      padding-top 10%
      .title
        font-size 30px
        font-weight bold
        color #95757
        text-align center
        color #595757
        font-family 'arial'
      .line2
        display flex
        margin-top 36px
        .box
          flex 1
          position relative
          &.left
            height 170px
          .circle
            border 3px solid #717071
            color #717071
            letter-spacing 1px
            width 86px
            height 86px
            line-height 78px
            border-radius 100px
            box-sizing box-sizing
            text-align center
            font-size 12px
            position absolute
            right 20px
            bottom 0px
            font-weight bold
        .center
          flex 0 0 130px
          width 130px
          height 130px
          text-align center
          background-image url('../../common/image/logo_zs.png')
          background-size 130px 130px
          background-repeat no-repeat
        .right
          color #595757
          .text
            font-family AdobeSongStd-Light
            padding-left 76px
            .chinese
              margin-top 30px
              font-size 13px
            .english
              margin-top 10px
              font-family 'arial'
              font-size 13px